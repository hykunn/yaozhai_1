swiper {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
}

swiper image {
  width: 100%;
  height: 100%;
}

.background {
  background: #ececec;
}

.contentwhite {
  background: #fff;
}

.header {
  width: 96%;
  border-left: 3px solid #b59b80;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 25rpx;
}

.header view {
  width: 90%;
  margin: rpx;
}

.header text {
  font-size: 38rpx;
  color: #494949;
}

.recommend_scroll_x_box {
  height: 280rpx;
  white-space: nowrap;
  display: flex;
  margin: 25rpx;
  width: 94%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.scroll-text{

}
.recommend_hot_box {
  width: 230rpx;
  height: 245rpx;
  margin-right: 24rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  background:  #eeeeee;
}

.recommend_hot_image {
  width: 230rpx;
  height: 143rpx;
}

.list {
  display: flex;
  flex-wrap: wrap;
  border-top: 10px solid #ececec;
}

.content {
  width: 45%;
  margin: 20rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.content image {
  width: 100%;
  height: 100%;
}

.article-content {
  width: 45%;
}

.title {
  margin: 10rpx;
  font-size: 14px;
  color: rgb(80, 80, 80);
  display: block;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.intro {
  margin: 10rpx;
  font-size: 12px;
  color: rgb(156, 156, 156);
  display: block;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.detail {
  margin: 10rpx;
  font-size: 10px;
  color: rgb(121, 121, 121);
  display: block;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
