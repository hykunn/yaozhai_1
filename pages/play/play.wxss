.play{
  background:#ececec;
}
.image-text{
  width: 100%;
  height: 300rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: center;
  position: relative; 
}
.image-text image{
  width: 100%;
  height: 100%;
}
.text1{
  position: absolute; 
  font-size: 20px;
  color: #fff;
  bottom:140rpx;
}
.content{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.card{
  width: 46%;
  height: 450rpx;
  margin: 10rpx 10rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  position: relative; 
}
.card image{
  width: 100%;
  height: 250rpx;
}
.card-title{
  width: 100%;
  height: 40rpx;
  margin:10rpx;
  font-size: 16px;
  color: rgb(80, 80, 80);
  display: block;
  white-space: pre-wrap;
  word-wrap: break-word;
}
.card-content{
  width: 100%;
  height: 60rpx;
  margin:10rpx;
  font-size: 12px;
  color:  rgb(156, 156, 156);
  display: block;
  white-space: pre-wrap;
  word-wrap: break-word;
}
.card-time{
  width: 100%;
  height: 20rpx;
  margin:10rpx;
  font-size: 12px;
  color:  rgb(156, 156, 156);
}