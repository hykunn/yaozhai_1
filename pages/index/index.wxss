swiper {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
}

swiper image {
  width: 100%;
  height: 100%;
}

.background {
  background: #ececec;
}

.contentwhite {
  background: #fff;
}

.header {
  width: 96%;
  border-left: 3px solid #b59b80;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 25rpx;
}

.header view {
  width: 90%;
  margin: 10rpx;
}

.header text {
  font-size: 38rpx;
  color: #494949;
}

.selection {
  display: flex;
  margin-bottom: 50rpx;
  background: #fff;
}

.content {
  width: 45%;
  margin: 10rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.content image {
  width: 100%;
  height: 100%;
}

.article-content {
  width: 45%;
}

.title {
  font-size: 18px;
  color: rgb(80, 80, 80);
  display: block;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.detail {
  font-size: 14px;
  color: rgb(156, 156, 156);
  display: block;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.navs {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 20rpx 40rpx;
  width: 90%;
}

.nav-item {
  width: 33%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.nav-item .nav-image {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
}

.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}

.wander {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
